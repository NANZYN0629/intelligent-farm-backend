<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.UserMapper">

    <select id="list" resultType="com.sipc.intelligentfarmbackend.pojo.User">
        select u.*, r.role_name
        from user u left join role r on u.role_id = r.id
        <where>
            <if test="name != null">
                and u.name = #{name}
            </if>
        </where>
        order by u.id desc
    </select>



</mapper>