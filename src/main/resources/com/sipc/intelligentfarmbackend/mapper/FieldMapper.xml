<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.FieldMapper">
<!--    //查询所有地块-->
    <select id="findAll" resultType="com.sipc.intelligentfarmbackend.pojo.Field">
        select
            field.id,
            field.field_name,
            field.crop_name,
            field.crop,field.area,
            field.plant_time
        from
            field
    </select>

<!--    根据id查询地块-->
    <select id="getById" resultType="com.sipc.intelligentfarmbackend.pojo.Field">
        select * from field where id= #{id}
    </select>

<!--    添加地块-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into field(field_name,location,area,crop_name,crop,plant_time)
        values(#{fieldName},#{location},#{area},#{cropName},#{crop},#{plantTime})
    </insert>

<!--     根据id删除地块-->
    <delete id="deleteById">
        delete from field where id=#{id}
    </delete>

<!--     根据id修改地块信息-->
    <update id="update">
        update field set area=#{area},crop_name=#{cropName},crop=#{crop},plant_time=#{plantTime} where id=#{id}
    </update>


</mapper>