<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.DiseaseMapper">

    <!--    分页查询-->
    <select id="list" resultType="com.sipc.intelligentfarmbackend.pojo.Disease">
        SELECT *, f.field_name AS fieldName, f.crop_name AS corpName FROM disease d
        JOIN field f ON d.field_id = f.id
        <where>
            <if test="id != null">
                AND d.id = #{id}
            </if>
            <if test="fieldId != null">
                AND d.field_id = #{fieldId}
            </if>
            <if test="alarmTime != null">
                AND d.alarm_time = #{alarmTime}
            </if>
        </where>
    </select>


<!--    批量删除-->
    <delete id="delete">
        DELETE FROM disease WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>