<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.EnvironmentAlarmSetMapper">

<!--    按fieldID查询-->
   <select id="getByFieldId" resultType="com.sipc.intelligentfarmbackend.pojo.EnvironmentAlarmSet">
       SELECT * FROM environment_alarm_set
       WHERE field_id = #{fieldId}
   </select>

<!--    插入-->
    <insert id="insert" parameterType="com.sipc.intelligentfarmbackend.pojo.EnvironmentAlarmSet">
        INSERT INTO environment_alarm_set(field_id, program, max, min)
        VALUES (#{fieldId}, #{program}, #{max}, #{min})
    </insert>



</mapper>


