<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.SensorMapper">

<!--通过fieldId查询传感器-->
    <select id="getByFieldId" resultType="com.sipc.intelligentfarmbackend.pojo.Sensor">
        select * from sensor
        where field_id=#{fieldId}
    </select>


<!--添加传感器-->
    <insert id="insert">
        insert into sensor(field_id, status, sensor_name)
        values(#{fieldId},#{status},#{sensorName})
    </insert>


</mapper>