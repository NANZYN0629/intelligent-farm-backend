<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sipc.intelligentfarmbackend.mapper.EnvironmentMapper">


<!--    根据fieldId查询环境信息-->
    <select id="getByFieldId" resultType="com.sipc.intelligentfarmbackend.pojo.Environment">
        select * from environment where field_id=#{fieldId}
    </select>


    <insert id="insertEnvironment" parameterType="com.sipc.intelligentfarmbackend.pojo.Environment">
        INSERT INTO environment(
        field_id, nitrogen, potassium, moisture,
        light, phosphorus, temperature, ph, co2
        ) VALUES (
        #{fieldId}, #{nitrogen}, #{potassium}, #{moisture},
        #{light}, #{phosphorus}, #{temperature}, #{ph}, #{co2}
        )
    </insert>

</mapper>