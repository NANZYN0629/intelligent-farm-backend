<!--    // 分页-->
    <select id="list" resultType="com.sipc.intelligentfarmbackend.pojo.EnvironmentAlarm">
        SELECT *, f.field_name AS fieldName, f.crop_name AS cropName FROM environment_alarm
        JOIN field f ON f.id = environment_alarm.field_id
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="fieldId != null">
                AND field_id = #{fieldId}
            </if>
            <if test="alarmTime != null">
                AND alarm_time = #{alarmTime}
            </if>
        </where>
    </select>

</mapper>

